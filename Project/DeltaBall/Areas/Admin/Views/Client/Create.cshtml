@model DeltaBall.Data.Models.Client

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">@ViewData["Title"]</h5>
        <div class="card rounded mb-0">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group p-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" aria-required="true" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1 px-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                            <div id="phoneHelp" class="form-text">Телефон формата 8(123)456-78-90.</div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1 px-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1 px-3">
                            <label asp-for="Experience" class="form-label"></label>
                            <input asp-for="Experience" class="form-control" aria-required="true" value="0"/>
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>
                        <div class="form-group p-3">
                            <label asp-for="RankId" class="form-label"></label>
                            <select asp-for="RankId" class="form-select" asp-items="ViewBag.RankId"></select>
                        </div>
                        <div class="form-group p-3">
                            <input type="submit" value="Создать" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <hr />
            <div class="p-3">
                <a asp-area="Admin" asp-controller="Table" asp-action="Info" asp-route-name="Clients" class="btn btn-outline-info">Вернуться</a>
            </div>
        </div>
    </div>
</div>
<hr />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

