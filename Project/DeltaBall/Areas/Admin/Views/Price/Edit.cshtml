@model DeltaBall.Data.Models.Price

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">@ViewData["Title"]</h5>
        <div class="card rounded mb-0">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group p-3">
                            <label asp-for="ScenarioId" class="form-label"></label>
                            <select asp-for="ScenarioId" class="form-select" asp-items="ViewBag.GameScenarioId" aria-required="true"></select>
                            <span asp-validation-for="ScenarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1 px-3">
                            <label asp-for="GameTypeId" class="form-label"></label>
                            <select asp-for="GameTypeId" class="form-select" asp-items="ViewBag.GameTypeId" aria-required="true"></select>
                            <span asp-validation-for="ScenarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1 px-3">
                            <label asp-for="Value" class="form-label"></label>
                            <input asp-for="Value" class="form-control" type="number" min="300" aria-required="true" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="form-group p-3">
                            <input type="submit" value="Сохранить" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <hr />
            <div class="p-3">
                <a asp-area="Admin" asp-controller="Table" asp-action="Info" asp-route-name="Prices" class="btn btn-outline-info">Вернуться</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

